		"Connection": "Host=localhost;Port=5432;Username=propel_user;Password=propel_password;Include Error Detail=true",
		"Database": "propel_feature_flags",
		"Schema": "dashboard",
		"MigrationTable": "schema_migrations",
		"TimeoutSeconds": 30,
		"ScriptsPath": "scripts/postgresql"
	}, 
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"System": "Warning",
			"Propel.FeatureFlags.Migrations": "Debug"
		}
	}
